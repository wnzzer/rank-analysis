# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for all Rust source files
*.rs text eol=lf

# Force LF for all TypeScript and Vue files
*.ts text eol=lf
*.vue text eol=lf
*.js text eol=lf
*.json text eol=lf

# Force LF for configuration files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
.editorconfig text eol=lf
.prettierrc* text eol=lf
.eslintrc* text eol=lf

# Force LF for shell scripts
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.ico binary
*.woff binary
*.woff2 binary
